<%- include('../partials/head') %>
<%- include('../partials/header') %>


<main class="my-orders-main">
  <div class="my-orders-div"></div>
  <h3 class="my-orders">Pending Orders</h3>
  <div class="my-orders-table">
    <table class="table">
      <thead>
        <tr>
          <th class="table-header" scope="col">Order Date</th>
          <th class="table-header justify-right table-head-confirm-order" scope="col" >Confirm Order</th>
        </tr>
      </thead>
      <tbody>
        </tr>
        <% for (let order of orders.pending) { %>
          <tr>
            <td><%= new Date(order.order_date_time).toDateString() %></td>
            <td class="td-flex">
              <input class="time-box" type="text">
              <button type="button" class="my-orders-button  justify-right">Confirm</button>
            </td>
            
          </tr>
        <% }%>
      </tbody>
    </table>
  </div>
  <div class="my-orders-div"></div>
  <h3 class="my-orders">Previous Orders</h3>
  <div class="my-orders-table">
    <table class="table">
      <thead>
        <tr>
          <th class="table-header" scope="col">Order Date</th>
          <th class="table-header  justify-right" scope="col">View Order</th>
        </tr>
      </thead>
      <tbody>
        <% for(let order of orders.completed) { %>
          <tr>
          <td><%= new Date(order.order_date_time).toDateString() %></td>
          <td><button type="button" class="my-orders-button  justify-right">View</button></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <div class="my-orders-div"></div>

</main>
<%- include('../partials/footer') %>

