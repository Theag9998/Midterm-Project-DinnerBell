
<%- include('../partials/head') %>
<%- include('../partials/header') %>



<main class="my-orders-main">
  <div class="my-orders-div"></div>
  <h3 class="my-orders">My Pending Orders</h3>
  <div class="my-orders-table">
    <table class="table">
      <thead>
        <tr>
          <th class="table-header" scope="col">Order Date</th>
          <th class="table-header justify-right" scope="col">View Order</th>
        </tr>
      </thead>
      <% for(let order of orders.pending) { %>
        <tbody class="order-row">
          <tr>
            <td>Order #: <%= order.id %> - <%= new Date(order.order_date_time).toDateString() %> </td>
            <td><button type="button" class="my-orders-button  justify-right">View</button></td>
          </tr>

          <% for (let food of order.foods) {%>
            <tr class="food-row">
                <td class="food-info">
                  <p class="food-name food-deets"><%= food.name %></p>
                  <p class="food-deets"><%= food.description %> </p>
                </td>
                <td class="food-info food-right">$<%= food.cost %>.00</td>
            </tr>
            <% }%>
        </tbody>
        <% } %>
    </table>
  </div>
  <div class="my-orders-div"></div>
  <h3 class="my-orders">My Previous Orders</h3>
  <div class="my-orders-table">
    <table class="table">
      <thead>
        <tr>
          <th class="table-header" scope="col">Order Date</th>
          <th class="table-header  justify-right" scope="col">View Order</th>
        </tr>
      </thead>

        <% for(let order of orders.completed) { %>
        <tbody class="order-row">
          <tr>
            <td>Order #: <%= order.id %> - <%= new Date(order.order_date_time).toDateString() %> </td>
            <td><button type="button" class="my-orders-button  justify-right">View</button></td>
          </tr>

          <% for (let food of order.foods) {%>
            <tr class="food-row">
              <td class="food-info">
                <p class="food-name food-deets"><%= food.name %></p>
                <p class="food-deets"><%= food.description %> </p>
              </td>
              <td class="food-info food-right">$<%= food.cost %>.00</td>
          </tr>
            <% }%>
        </tbody>
        <% } %>
    </table>
  </div>
  <div class="my-orders-div"></div>

</main>
<%- include('../partials/footer') %>

