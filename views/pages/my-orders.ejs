<%- include('../partials/head') %>
<%- include('../partials/header') %>


<main >
  <body></body>
    <div></div>
    <h3 style="text-align: center;">My Pending Orders</h3>
    <table class="table">
      <thead>
        <tr>
          <th class="table-header" scope="col">Order Date</th>
          <th class="table-header" scope="col">View Order</th>
        </tr>
      </thead>
      <tbody>
        </tr>
        <% for (let order of orders.pending) { %>
          <tr>
            <td><%= new Date(order.order_date_time) %></td>
            <td><button type="button" class="my-orders-button">View</button></td>
          </tr>
        <% }%>
      </tbody>
    </table>
    <div></div>
    <h3>My Previous Orders</h3>
    <table class="table">
      <thead>
        <tr>
          <th class="table-header" scope="col">Order Date</th>
          <th class="table-header" scope="col">View Order</th>
        </tr>
      </thead>
      <tbody>
        <% for(let order of orders.completed) { %>
          <tr>
          <td><%= order.order_date_time %></td>
          <td><button type="button" class="my-orders-button">View</button></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <div></div>
    <%- include('../partials/footer') %>
  </body>
</main>

